<%- include("includes/defaultHeader.ejs") %>
<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col-md-8 col-lg-12 col-xl-4 offset-xl-1">
        <% if (typeof errorsArr != 'undefined') {%>
        <div
          class="alert alert-danger alert-dismissible fade show"
          role="alert"
        >
          <button
            type="button"
            class="close"
            data-dismiss="alert"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
            <span class="sr-only">Close</span>
          </button>
          <strong>Errors!</strong> <br />
          <% for (let index = 0; index < errorsArr.length; index++) { %>
          <%=errorsArr[index]%> <br />
          <%} %>
        </div>
        <% } %>
      </div>
    </div>
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-8 col-lg-12 col-xl-4 offset-xl-1">
        <form action="/user/register" method="post">
          <p class="lead fw-normal mb-0 me-3 login-head align-items-center">
            Welcome!
          </p>

          <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0">
              Please create your account here
            </p>
          </div>

          <div class="form-outline mb-2">
            <label class="form-label editText-label" for="name"
              >Username :
            </label>

            <input
              type="text"
              id="name"
              name="name"
              class="form-control form-control editText"
              placeholder="Enter Username"
            />
          </div>

          <div class="form-outline mb-2">
            <label class="form-label editText-label" for="form3Example3"
              >Email address :
            </label>

            <input
              type="email"
              id="form3Example3"
              name="email"
              class="form-control form-control editText"
              placeholder="Enter a valid email address"
            />
          </div>

          <div class="form-outline mb-3">
            <label class="form-label editText-label" for="form3Example4"
              >Password :
            </label>
            <input
              type="password"
              id="form3Example4"
              name="password"
              class="form-control form-control editText"
              placeholder="Enter password "
            />
          </div>

          <div class="form-outline mb-3">
            <label class="form-label editText-label" for="form3Example5"
              >Confirm Password :
            </label>
            <input
              type="password"
              id="form3Example5"
              name="confirm_password"
              class="form-control form-control editText"
              placeholder="Confirm password "
            />
          </div>

          <div class="text-center text-lg-start mt-4 pt-2" id="login-assets">
            <button
              type="submit"
              class="btn button"
              style="padding-left: 2.5rem; padding-right: 2.5rem; width: 15rem"
            >
              Register
            </button>
            <p class="small fw-bold mt-2 pt-1 mb-0 text">
              Already have an account?
              <a
                href="/login"
                class="link-success"
                style="text-decoration: none; color: #37c571"
              >
                Login</a
              >
            </p>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
<%- include("includes/footer.ejs") %>
